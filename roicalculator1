<script>
  (function () {
    const STAFF_COST = 35; // £35 per hour fixed
    const FIXED_AUTOMATED_HOURS = 0.25; // 15 minutes per report

    const reportsPerMonthEl = document.getElementById("reportsPerMonth");
    const hoursPerReportManualEl = document.getElementById("hoursPerReportManual");

    const manualAnnualCostEl = document.getElementById("manualAnnualCost");
    const automatedAnnualCostEl = document.getElementById("automatedAnnualCost");
    const annualSavingEl = document.getElementById("annualSaving");
    const costReductionPercentEl = document.getElementById("costReductionPercent");
    const roiSummaryEl = document.getElementById("roiSummary");

    function formatCurrency(value) {
      if (!isFinite(value)) return "£0";
      return "£" + value.toLocaleString("en-GB", {
        maximumFractionDigits: 0
      });
    }

    function formatPercent(value) {
      if (!isFinite(value)) return "0%";
      return value.toLocaleString("en-GB", {
        maximumFractionDigits: 1
      }) + "%";
    }

    function calculate() {
      const reportsPerMonth = parseFloat(reportsPerMonthEl.value) || 0;
      const hoursPerReportManual = parseFloat(hoursPerReportManualEl.value) || 0;
      const hoursPerReportAutomated = FIXED_AUTOMATED_HOURS; // always 0.25 hours

      const manualAnnualHours = reportsPerMonth * hoursPerReportManual * 12;
      const automatedAnnualHours = reportsPerMonth * hoursPerReportAutomated * 12;

      const manualAnnualCost = manualAnnualHours * STAFF_COST;
      const automatedAnnualCost = automatedAnnualHours * STAFF_COST;
      const annualSaving = manualAnnualCost - automatedAnnualCost;
      const reductionPercent = manualAnnualCost > 0
        ? (annualSaving / manualAnnualCost) * 100
        : 0;

      manualAnnualCostEl.textContent = formatCurrency(manualAnnualCost);
      automatedAnnualCostEl.textContent = formatCurrency(automatedAnnualCost);
      annualSavingEl.textContent = formatCurrency(annualSaving);
      costReductionPercentEl.textContent = formatPercent(reductionPercent);

      roiSummaryEl.innerHTML =
        "With your current inputs, automating reporting with Panintelligence could save you " +
        "<strong>" + formatCurrency(annualSaving) + " per year</strong>.";
    }

    reportsPerMonthEl.addEventListener("input", calculate);
    hoursPerReportManualEl.addEventListener("input", calculate);

    // Initial calculation with defaults
    calculate();
  })();
</script>
